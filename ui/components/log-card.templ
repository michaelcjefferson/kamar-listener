package components

import (
  "github.com/mjefferson-whs/listener/internal/data"
	"fmt"
	"strings"
)

templ LogCard(log *data.Log) {
  <a class="log-card" href={ templ.URL(fmt.Sprintf("/logs/%v", log.ID)) }>
    <h3 class={ strings.ToLower(log.Level) + "-text truncate-text" }>{ log.Message }</h3>
    <div class="log-meta-container">
      <p><strong>ID:</strong>{ fmt.Sprintf("%v", log.ID) }
      <br>
      { log.Time }</p>
    </div>
  </a>
}